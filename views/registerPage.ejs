          <div class="input-wrapper input-wrapper-logo">
            <input
              placeholder="logo"
              type="file"
              name="logo"
              required="true"
              accept="image/*"
            />
          </div>
          <div class="input-wrapper-2">
            <input
              placeholder="username"
              type="text"
              name="username"
              required="true"
              maxlength="15"
              minlength="6"
            />

            <input
              placeholder="password"
              type="password"
              name="password"
              required="true"
              maxlength="30"
              minlength="7"
            />
          </div>

          <div class="input-wrapper">
            <input
              placeholder="Nome ristorante / bar"
              type="text"
              name="name_restaurant"
              required="true"
              maxlength="30"
              minlength="2"
            />
          </div>
          <div class="input-wrapper">
            <input
              placeholder="email"
              type="email"
              name="email"
              required="true"
              maxlength="50"
              minlength="7"
            />
          </div>
          <div class="input-wrapper">
            <input
              placeholder="telefono"
