              placeholder="Orario (es. 10:00 - 1.00)"
              type="text"
              name="hours"
              required="true"
              maxlength="12"
              minlength="6"
            />
            <input
              placeholder="giorni (es. LUN - VEN)"
              type="text"
              name="open"
              required="true"
              maxlength="9"
              minlength="6"
            />
          </div>
          <div class="input-wrapper-2">
            <input
              disabled="true"
              placeholder="Tema Default"
              type="text"
              name="theme"
              required="true"
              value="default"
            />
            <input
              disabled="true"
              placeholder="Colore"
              type="text"
              name="color"
              required="true"
              value="default"
            />
          </div>

          <textarea
            name="phrase"
            rows="5"
            cols="50"
            placeholder="Frase di benvenuto"
            maxlength="150"
            minlength="35"
          ></textarea>

          <button type="submit">Register</button>
